using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication3
{
    class AgeClass
    {
        private int age;

        public int Age
        {
            get
            {
                return age;
            }
            set
            {
                if (value < 0)
                    Console.WriteLine("ERROR! Age cannot be a negative number.");
                else
                    age = value;
            }
        }

    }
    
    class Program
    {
        static void Main(string[] args)
        {

            Console.Write("Enter your age: ");
            
            string strAge = Console.ReadLine();
            int inputAge = Convert.ToInt16(strAge);
            
            AgeClass myAge = new AgeClass();
            myAge.Age = inputAge;

            Console.WriteLine("Current age property is set to " + myAge.Age + " years");
            Console.ReadKey();            
        }
    }
}
