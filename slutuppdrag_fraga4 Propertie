namespace SlutuppdragFraga4
{
    class Age
    {
        private int age;
        
        public int Age
        {
            get
            {
                return age;
            }
            set
            {
                if(value < 0)
                    Console.WriteLine("ERROR! Age can only be a positive number.");
                else
                    age = value;
            }
        }
        
    }
    
    
    public class SampleClass
    {
        public static void Main()
        {
            // Write hello world to the console
            Console.WriteLine("Enter your age: ");
            Console.ReadLine(strAge);
