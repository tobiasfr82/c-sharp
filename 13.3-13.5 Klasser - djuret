/* Variabler:
*
* Namn:
* Ras:
* Ålder:
* Ägare:
* Vikt:
* Längd:
* 
* Metoder
* 
* Bark()
* Fetch()
* Jump()
* WaveTail()
*/

class Dog
{
  // Public Dog Variables
  
  public string name;
  public int age;
  public string race;
  public string owner;
  public double weight;
  public double length;
  
  // Public Dog Methods()
  
  public void Bark()
  {
    Console.WriteLine(myDog.name + " is BARKING!");
  }
  
  public void Fetch()
  {
    Console.WriteLine(myDog.name + " is FETCHING A STICK!");
  }
  
  public void Jump()
  {
    Console.WriteLine(myDog.name + " is jumping!");
  }
  
  public void WaveTail()
  {
    Console.WriteLine(myDog.name + " waving tail!");
  }
  
  
}


------------------------------ Lägg in i Main -----------------------

Console.WriteLine("Answer the following questions to create your dog");
Console.Write("Name your dog: ");
Dog myDog.name = Console.ReadLine();

Console.Write("set the age of your dog: ");
Dog myDog.age = Console.ReadLine();

Console.Write("Set the race of your dog: ");
Dog myDog.race = Console.ReadLine();

Console.Write("Enter owners name: ");
Dog myDog.owner = Console.ReadLine();

Console.Write("Enter the dogs weight: ");
Dog myDog.weight = Console.ReadLine();

Console.Write("Enter the dogs length: ");
Dog myDog.length = Console.ReadLine();

Console.WriteLine("This is what your Dog can do");
myDog.Bark();
myDog.Fetch();
myDog.Jump();
myDog.WaveTail();

Console.WriteLine("This is the information about your dog");
Console.WriteLine(myDog.Name);
Console.WriteLine(myDog.Age);
Console.WriteLine(myDog.Race);
Console.WriteLine(myDog.Owner);
Console.WriteLine(myDog.Weight);
Console.WriteLine(myDog.Length);


Console.ReadKey();


